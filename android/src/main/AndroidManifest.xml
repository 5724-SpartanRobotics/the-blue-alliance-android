<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thebluealliance.androidclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- For Android Beam support -->
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.LaunchActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/vnd.com.thebluealliance.androidclient" />
            </intent-filter>
            <!-- Use multiple "data" elements so we can only filter for URLs we can handle -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="@string/web_url_host_www" android:pathPattern="/teams"/>
                <data android:scheme="http" android:host="@string/web_url_host_www" android:pathPattern="/team/.*"/>
                <data android:scheme="http" android:host="@string/web_url_host_www" android:pathPattern="/events"/>
                <data android:scheme="http" android:host="@string/web_url_host_www" android:pathPattern="/event/.*"/>
                <data android:scheme="http" android:host="@string/web_url_host_www" android:pathPattern="/match/.*"/>
                <data android:scheme="http" android:host="@string/web_url_host" android:pathPattern="/teams"/>
                <data android:scheme="http" android:host="@string/web_url_host" android:pathPattern="/team/.*"/>
                <data android:scheme="http" android:host="@string/web_url_host" android:pathPattern="/events"/>
                <data android:scheme="http" android:host="@string/web_url_host" android:pathPattern="/event/.*"/>
                <data android:scheme="http" android:host="@string/web_url_host" android:pathPattern="/match/.*"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.ViewEventActivity" />
        <activity android:name=".activities.ViewTeamActivity" />
        <activity android:name=".activities.ViewMatchActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.OpenSourceLicensesActivity"
            android:label="@string/license_label" />
        <activity android:name=".activities.TeamAtEventActivity" />
        <activity android:name=".activities.SearchResultsActivity" />
        <activity android:name=".activities.MoreSearchResultsActivity" />
    </application>

</manifest>
