<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTabStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_tab_background</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBarTitleStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
