<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="false"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/match_title_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/match_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/match_video"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Quarters\n1 - 1" />

        <ImageView
            android:id="@id/match_video"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_action_play_over_video" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/match_header"
            android:background="@color/column_header_gray"
            android:minHeight="32dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/teams"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/time"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:id="@+id/teams_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TableRow
                    android:id="@+id/red_alliance"
                    android:layout_height="fill_parent"
                    android:minHeight="40dp">

                    <TextView
                        android:id="@+id/red1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 1" />

                    <TextView
                        android:id="@+id/red2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 2" />

                    <TextView
                        android:id="@+id/red3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_red"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Red 3" />

                </TableRow>

                <TableRow
                    android:id="@+id/blue_alliance"
                    android:layout_height="fill_parent"
                    android:minHeight="40dp">

                    <TextView
                        android:id="@+id/blue1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 1" />

                    <TextView
                        android:id="@+id/blue2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 2" />

                    <TextView
                        android:id="@+id/blue3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/match_team_selector_blue"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Blue 3" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/match_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/table_cell_gray"
                android:gravity="center_horizontal|center_vertical"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
