<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/name_wrapper"
            style="@style/InfoItemStyle"
            android:clickable="true">

            <ImageView
                android:id="@+id/name_icon"
                style="@style/InfoItemImageStyle"
                android:src="@drawable/ic_action_group" />

            <TextView
                android:id="@+id/name"
                style="@style/InfoItemTextStyle"
                android:layout_toRightOf="@id/name_icon"
                android:text="Teh Chezy Pofs" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_wrapper"
            style="@style/InfoItemStyle"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/location_icon"
                style="@style/InfoItemImageStyle"
                android:src="@drawable/ic_action_place" />

            <TextView
                android:id="@+id/location_label"
                style="@style/InfoItemTextStyle"
                android:layout_toRightOf="@id/location_icon"
                android:textSize="14sp"
                android:textStyle="italic"
                android:paddingRight="5dp"
                android:text="from" />

            <TextView
                android:id="@+id/location"
                style="@style/InfoItemTextStyle"
                android:layout_toRightOf="@id/location_label"
                android:layout_toLeftOf="@+id/location_nav_arrow"

                android:text="San Jose, CA" />

            <ImageView
                android:id="@id/location_nav_arrow"
                style="@style/InfoItemNavigationArrowStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/full_name_wrapper"
            style="@style/InfoItemStyle"
            android:clickable="true">

            <ImageView
                android:id="@+id/full_name_icon"
                style="@style/InfoItemImageStyle"
                android:src="@drawable/ic_action_about" />

            <TextView
                android:id="@+id/full_name"
                style="@style/InfoItemTextStyle"
                android:layout_toRightOf="@id/full_name_icon"
                android:text="aka this name is too long to fit comfortably here" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/social_wrapper"
            style="@style/InfoItemStyle"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:padding="0dp"
            android:divider="?android:attr/dividerVertical">

            <ImageView
                android:id="@+id/website_button"
                style="@style/InfoItemButtonBarImageStyle"
                android:src="@drawable/ic_action_web_site" />

            <ImageView
                android:id="@+id/twitter_button"
                style="@style/InfoItemButtonBarImageStyle"
                android:src="@drawable/ic_twitter" />

            <ImageView
                android:id="@+id/youtube_button"
                style="@style/InfoItemButtonBarImageStyle"
                android:src="@drawable/ic_youtube" />

            <ImageView
                android:id="@+id/chiefdelphi_button"
                style="@style/InfoItemButtonBarImageStyle"
                android:src="@drawable/ic_action_web_site" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/current_event_wrapper"
            style="@style/InfoItemStyle"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/current_event_icon"
                style="@style/InfoItemImageStyle"
                android:src="@drawable/ic_action_event" />

            <TextView
                android:id="@+id/current_event_label"
                style="@style/InfoItemLabelStyle"
                android:layout_toRightOf="@id/current_event_icon"
                android:layout_centerVertical="false"
                android:paddingRight="5dp"
                android:text="currently competing at" />

            <TextView
                android:id="@+id/current_event"
                style="@style/InfoItemTextStyle"
                android:layout_toRightOf="@id/current_event_icon"
                android:layout_toLeftOf="@+id/current_event_nav_arrow"
                android:layout_below="@id/current_event_label"
                android:layout_centerVertical="false"
                android:text="Central Valley Regional" />

            <ImageView
                android:id="@id/current_event_nav_arrow"
                style="@style/InfoItemNavigationArrowStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/current_matches_wrapper"
            style="@style/InfoItemStyle">

            <ImageView
                android:id="@+id/current_match_icon"
                style="@style/InfoItemImageStyle"
                android:src="@drawable/ic_action_time" />

            <TextView
                android:id="@+id/most_recent_match"
                style="@style/InfoItemTextStyle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Most recent match" />

            <include
                android:id="@+id/most_recent_match_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/most_recent_match"
                layout="@layout/match_list_item" />

            <TextView
                android:id="@+id/next_match"
                style="@style/InfoItemTextStyle"
                android:layout_below="@id/most_recent_match_details"
                android:layout_centerHorizontal="true"
                android:text="Next match" />

            <include
                android:id="@+id/next_match_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_match"
                layout="@layout/match_list_item" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>