<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:orientation="vertical">

    <TextView
        android:id="@+id/team_number"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="254"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/team_number"
        android:orientation="vertical"
        android:id="@+id/team_details">

        <TextView
            android:id="@+id/team_name"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teh Chezy Pofs" />

        <TextView
            android:id="@+id/team_location"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Jose, CA" />

    </LinearLayout>

    <TextView
        android:id="@+id/team_stat"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/team_details"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:singleLine="false"
        android:text="stat"
        android:textSize="20sp" />

</RelativeLayout>