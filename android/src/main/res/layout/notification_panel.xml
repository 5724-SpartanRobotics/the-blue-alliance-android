<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Shadow -->
    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/above_shadow"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_below="@id/shadow">

        <TextView
            android:id="@id/dragView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/notification_settings"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dragView"
            android:text="content stuff goes here"
            android:paddingLeft="16dp" />
    </LinearLayout>

    <com.thebluealliance.androidclient.views.FloatingActionButton
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/shadow"
        android:layout_marginRight="8dp"
        app:colorNormal="@color/fab_yellow"
        app:colorPressed="@color/fab_yellow_pressed"
        android:src="@drawable/ic_action_important" />

</RelativeLayout>